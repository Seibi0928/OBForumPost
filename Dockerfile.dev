FROM mcr.microsoft.com/dotnet/sdk:5.0-buster-slim
WORKDIR /src
EXPOSE 80
EXPOSE 443
COPY . .

RUN for f in `\find . -iname "bin" -o -iname "obj"`;do rm -r "$f"; done;
RUN dotnet clean
RUN dotnet restore "OBForumPost.sln"
RUN dotnet build "OBForumPost.sln" --no-incremental -c Debug

RUN dotnet tool install --global dotnet-ef
ENV PATH $PATH:/root/.dotnet/tools
